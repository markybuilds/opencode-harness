{
    "name": "@opencode-harness/plugin",
    "version": "0.1.2",
    "description": "OpenCode plugin for harness - RLM context management and memory persistence",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts --target es2022",
        "dev": "tsup src/index.ts --format esm --dts --watch --target es2022",
        "test": "vitest run",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@opencode-harness/shared": "*"
    },
    "devDependencies": {
        "rimraf": "^6.0.0",
        "tsup": "^8.0.0",
        "vitest": "^3.0.0"
    }
}