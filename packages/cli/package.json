{
    "name": "opencode-harness",
    "version": "0.1.3",
    "description": "AI Coding Harness for OpenCode - Autonomous task loops with RLM context management",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "bin": {
        "opencode-harness": "./dist/index.js",
        "oc-harness": "./dist/index.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --dts",
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "test": "vitest run",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@opencode-harness/shared": "*",
        "chalk": "^5.4.0",
        "commander": "^13.0.0",
        "execa": "^9.5.0",
        "ora": "^8.0.0",
        "yaml": "^2.7.0",
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "rimraf": "^6.0.0",
        "tsup": "^8.0.0",
        "vitest": "^3.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "keywords": [
        "opencode",
        "ai",
        "coding",
        "harness",
        "autonomous",
        "rlm",
        "context"
    ]
}