{
  "name": "opencode-harness",
  "version": "0.1.6",
  "description": "AI Coding Harness for OpenCode - Autonomous task loops with RLM context management",
  "private": false,
  "type": "module",
  "files": [
    "dist",
    "packages"
  ],
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "oc-harness": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run build:shared && npm run build:plugin && npm run build:bundle",
    "build:shared": "cd packages/shared && npm run build",
    "build:plugin": "cd packages/plugin && npm run build",
    "build:cli": "cd packages/cli && npm run build",
    "build:bundle": "npx tsup --config tsup.bundle.ts",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rimraf node_modules",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "rimraf": "^6.0.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.0.0"
}